@model JwtTest.Models.AcceptOrderModel
@{
    ViewData["Title"] = "Информация по деталям выполнения заказа";
}
<h4>Данные заказа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="AccOrder" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<b><label asp-for="Description" class="control-label"></label></b>
				@Html.DisplayFor(modelItem => Model.Description)
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<b><label asp-for="Content" class="control-label"></label></b>
				@Html.DisplayFor(modelItem => Model.Content)
				<span asp-validation-for="Content" class="text-danger"></span>
			</div>
			<div class="form-group">
				<b><label asp-for="Price" class="control-label"></label></b>
				@Html.DisplayFor(modelItem => Model.Price)
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<b><label asp-for="DeadLine" class="control-label"></label></b>
				@Html.DisplayFor(modelItem => Model.DeadLine)
				<span asp-validation-for="DeadLine" class="text-danger"></span>
			</div>
			<div class="form-group">
				<b><label asp-for="OrderStatus" class="control-label"></label></b>
				@Html.DisplayFor(modelItem => Model.OrderStatus)
				<span asp-validation-for="OrderStatus" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Подвердить" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
